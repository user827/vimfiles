fun! s:is_restricted_argv() abort
  "TODO BUG? getpid migh fail here when used in chroot
  for l:line in split(readfile('/proc/self/cmdline')[0], "\x00")
    if l:line == "-Z"
      return 1
    endif
  endfor
  return 0
endfun


